{
    "manifest_version": 2,
    "name": "Beats",
    "version":"1.0.0",
    "description":"Smart background music auto play-pause",
    "permissions":[
        "tabs",
        "nativeMessaging"
    ],

    "browser_action":{
        "default_popup":"popup.html",
        "default_icon":{
            "128":"./assets/icon.png"
        }
    },
    "background":{
        "page":"background.html",
        "persistent":true
    },
    "content_security_policy": "script-src 'self' https://www.youtube.com https://googleads.g.doubleclick.net; object-src 'self'"

}